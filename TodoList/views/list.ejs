<%- include('header') %> 

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>  
    </div> 

    <div class="box">        
        <% newListItems.forEach(function(item){ %>
            <form action="/delete" method="POST">
                <div class="item">            
                    <input name="checkbox" value="<%= item._id %>" onchange="this.form.submit()" type="checkbox">
                    <p> <%=item.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">  
            </form>               
        <% }); %>                
            
        <form class="item" action="/" method="POST">
            <input name="newItem" type="text" placeholder="New Item" autocomplete="off">
            <button name="list" type="submit" value=<%= listTitle %>>+</button>
        </form>        
    </div>

<%- include('footer') %> 



